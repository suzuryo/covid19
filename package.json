{
  "name": "covid19",
  "version": "1.0.0",
  "description": "岩手県 新型コロナウイルス感染症対策サイト 非公式",
  "author": "岩手県内有志",
  "private": true,
  "engines": {
    "node": ">=14.16.1"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development GENERATE_ENV=development nuxt --config-file nuxt.config.dev.ts",
    "dev-no-axe": "cross-env NODE_ENV=dev-no-axe GENERATE_ENV=development nuxt --config-file nuxt.config.dev.ts",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production nuxt start",
    "generate:deploy": "cross-env GENERATE_ENV=production nuxt generate",
    "generate:dev": "cross-env GENERATE_ENV=development nuxt generate",
    "generate": "eslint './**/*.{js,ts,vue}' && nuxt generate",
    "test": "echo 'skip tests (there is no test)'",
    "lint": "eslint './**/*.{js,ts,vue}'",
    "lint:fix": "eslint './**/*.{js,ts,vue}' --fix",
    "stylelint": "stylelint '**/*.{css,scss,vue}'",
    "stylelint:fix": "stylelint --fix '**/*.{css,scss,vue}'"
  },
  "lint-staged": {
    "*.{js,ts,css,vue}": [
      "eslint --fix"
    ],
    "*.{css,scss,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./pre-commit.sh && lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/types": "2.15.4",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/pwa": "3.3.5",
    "@nuxtjs/sitemap": "2.4.0",
    "chart.js": "2.9.4",
    "cross-env": "7.0.3",
    "dayjs": "1.10.4",
    "nuxt": "2.15.4",
    "nuxt-i18n": "6.25.0",
    "vue": "2.6.12",
    "vue-chartjs": "3.5.1",
    "vue-meta": "2.4.0",
    "vue-scrollto": "2.20.0",
    "vue-spinner": "1.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.13.15",
    "@babel/runtime-corejs3": "7.13.10",
    "@mdi/js": "5.9.55",
    "@nuxt/typescript-build": "2.1.0",
    "@nuxtjs/eslint-config": "6.0.0",
    "@nuxtjs/eslint-config-typescript": "6.0.0",
    "@nuxtjs/google-analytics": "2.4.0",
    "@nuxtjs/stylelint-module": "4.0.0",
    "@nuxtjs/vuetify": "1.11.3",
    "@types/chart.js": "2.9.32",
    "axe-core": "4.1.4",
    "core-js": "3.10.1",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.11",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "nuxt-purgecss": "1.0.0",
    "nuxt-svg-loader": "1.2.0",
    "prettier": "2.2.1",
    "stylelint": "13.12.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "21.0.0",
    "stylelint-scss": "3.19.0",
    "ts-loader": "8.1.0",
    "typescript": "4.2.4",
    "vue-axe": "2.4.4",
    "vue-template-compiler": "2.6.12"
  }
}
